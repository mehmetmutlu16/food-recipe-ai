    rules_version = '2';
    service cloud.firestore {
      match /databases/{database}/documents {
        // MVP only (no auth yet). Tighten before production.
        match /recipe_requests/{docId} {
          allow read, write: if true;
        }

        match /recipes/{docId} {
          allow read, write: if true;
        }

        match /{document=**} {
          allow read, write: if false;
        }
      }
    }
